{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Rust: Debug single integration test",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--tests",
                    "--package=orcapod",
                ],
                "filter": {
                    "kind": "test"
                }
            },
            "args": [
                "--exact",
                "--nocapture",
                "verify_composition",
            ],
            "cwd": "${workspaceFolder}",
            // "sourceLanguages": [
            //     "rust"
            // ],
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Rust: Debug all integration tests",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--tests",
                    "--package=orcapod",
                ],
                "filter": {
                    "kind": "test"
                }
            },
            "args": [
                "--exact",
                "--nocapture",
            ],
            "cwd": "${workspaceFolder}",
            // "sourceLanguages": [
            //     "rust"
            // ],
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Rust: Debug unit tests",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=orcapod"
                ],
                "filter": {
                    "name": "orcapod",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            // "sourceLanguages": [
            //     "rust"
            // ],
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Rust: Debug executable 'user'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=user",
                    "--package=orcapod"
                ],
                "filter": {
                    "name": "user",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            // "sourceLanguages": [
            //     "rust"
            // ],
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Rust: Debug unit tests in executable 'user'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=user",
                    "--package=orcapod"
                ],
                "filter": {
                    "name": "user",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            // "sourceLanguages": [
            //     "rust"
            // ],
        },
    ]
}